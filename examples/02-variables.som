// Variables and Constants with Type Annotations
тағйирёбанда ном: сатр = "Аҳмад";
тағйирёбанда синну_сол: рақам = 25;
тағйирёбанда дуруст_аст: мантиқӣ = дуруст;
собит ПИ: рақам = 3.14159;

чоп.сабт("Ном: " + ном);
чоп.сабт("Синну сол: " + синну_сол);
чоп.сабт("Дуруст аст: " + дуруст_аст);
чоп.сабт("ПИ: " + ПИ);

// Variable reassignment
ном = "Фотима";
синну_сол = 22;

чоп.сабт("Нави ном: " + ном);
чоп.сабт("Нави синну сол: " + синну_сол);