// Test bitwise operators

функсия тест_битwise_операторҳо(): холӣ {
    чоп.сабт("=== Санҷиши операторҳои битӣ ===");
    
    тағйирёбанда а = 12;  // 1100 in binary
    тағйирёбанда б = 10;  // 1010 in binary
    
    чоп.сабт("а = 12 (1100)");
    чоп.сабт("б = 10 (1010)");
    
    // Bitwise AND
    чоп.сабт("а & б:");
    чоп.сабт(а & б);  // Should be 8 (1000)
    
    // Bitwise OR  
    чоп.сабт("а | б:");
    чоп.сабт(а | б);  // Should be 14 (1110)
    
    // Bitwise XOR
    чоп.сабт("а ^ б:");
    чоп.сабт(а ^ б);  // Should be 6 (0110)
    
    // Bitwise NOT
    чоп.сабт("~а:");
    чоп.сабт(~а);  // Should be -13
    
    // Left shift
    чоп.сабт("а << 1:");
    чоп.сабт(а << 1);  // Should be 24 (11000)
    
    // Right shift
    чоп.сабт("а >> 1:");
    чоп.сабт(а >> 1);  // Should be 6 (110)
    
    // Test assignment versions
    тағйирёбанда в = 15;
    чоп.сабт("в = 15");
    
    в &= 7;
    чоп.сабт("в &= 7:");
    чоп.сабт(в);
    
    в |= 8;
    чоп.сабт("в |= 8:");
    чоп.сабт(в);
}

тест_битwise_операторҳо();
